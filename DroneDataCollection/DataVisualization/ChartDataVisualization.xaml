<droneDataCollection:AbsDataVisualization x:Class="DroneDataCollection.ChartDataVisualization"
                                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                          xmlns:droneDataCollection="clr-namespace:DroneDataCollection"
                                          mc:Ignorable="d"
                                          d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer>
        <ListView
            x:Name="listView"
            ItemsSource="{Binding dataFrameList}"
            Style="{DynamicResource ListBoxCustom}">
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                <droneDataCollection:DataFrameGrid
                                    CanUserAddRows="False"
                                    AutoGenerateColumns="False">
                                    
                                   
                                </droneDataCollection:DataFrameGrid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </ScrollViewer>


</droneDataCollection:AbsDataVisualization>